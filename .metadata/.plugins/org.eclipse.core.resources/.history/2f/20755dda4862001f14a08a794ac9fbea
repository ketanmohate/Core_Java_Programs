package com.java;

public class Demo {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int cnt = 1;
		for(int i =1;i<=7 ;i++)
		{
			for(int j = 1 ;j<=cnt;j++ )
			{
				if(i<=4)
				{
					System.out.print("* ");
					cnt = cnt + 2;
				}
				else
				{
					System.out.print("* ");
					cnt = cnt - 2;
				}
			}
			System.out.println();
		}
		
	}

}
