	public Employee(int id ,String name ,String contact ,int presentday, int perdaysal)
	{
		this.id=id;
		this.name=name;
		this.contact=contact;
		this.presentday=presentday;
		this.perdaysal=perdaysal;
	}
	
	void CalSal()
	{
		totalSalary = presentday * perdaysal;
	}
	
	void showDetails()
	{
		
	}
}

