package com.java;

/* 
Pattern
 
 

End
*/

public class Pattern_Q22 
{
	public static void main(String[] args)
	{		
		for(int i = 1 ; i <=4 ; i++)
		{	
			for(int j = 1 ; j<=7 ; j++)
			{	
				if((j<=i*2-1))
				{
					if(j%2 != 0 )
					{
						System.out.print(i + "");
					}
					else
					{
						System.out.print("*");
					}
				}
			}
			System.out.println("");
		}
		
		int count=4;
		
		for(int i = 1 ; i <=4 ; i++)
		{	
			for(int j = 1 ; j<=7 ; j++)
			{	
				if((j>=i*2-1))
				{
					if(j%2 != 0 )
					{
						System.out.print(count + "");
					}
					else
					{
						System.out.print("*");
					}
				}
			}
			count++;
			System.out.println("");
		}
	}
}
