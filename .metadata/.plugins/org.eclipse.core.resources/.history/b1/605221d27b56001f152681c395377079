package com.java;

/* 
Pattern
 
A
BAB
CBABC
DCBABCD
EDCBABCDE

End
*/

public class Pattern_Q41
{
	public static void main(String[] args) 
	{			
		for(int i = 1 ; i <= 5 ; i++)
		{
			int ch = (ch+i)
			for(int j = 1 ; j <= i*2-i ; j++)
			{
				if(i>=j)
				{
					System.out.printf("* ");
				}
				else
				{
					System.out.print(" ");
				}
			}
			System.out.println("");
		}
	}
}