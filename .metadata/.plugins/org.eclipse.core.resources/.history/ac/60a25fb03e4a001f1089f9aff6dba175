package com.java;

/* 
Pattern
 


End
*/

public class Pattern_Q24 
{
	public static void main(String[] args)
	{		
		for(int i = 1 ; i <=4 ; i++)
		{	
			for(int j = 1 ; j<=7 ; j++)
			{	
				if(j<=i-1)
				{
					
				}
				if(j==1 || j==i)
				{
					System.out.print("* ");
				}
				else 
				{
					System.out.print("  ");
				}
			}
			System.out.println("");
		}
	}
}