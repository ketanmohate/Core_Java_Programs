package Assignment_21_08_2024.java;

import java.util.*;

/* 
 Q2. WAP to create class name as Factorial with two functions
void setValue(int no) this function can accept number as parameter
int getFactorial(): this function can calculate factorial of number and return it
 */

class Factorial
{
	int no1;
	
	void setValue(int no)
	{
		no1 = no;
	}
	
	void getFactorial()
	{
		int fact = 1;
		for(int i = 1 ; i <= no1 ; i++)
		{
			fact = fact * i;
		}
		System.out.println("Factorial is : " + fact);
	}
}

public class Q2_Cal_Factorial
{
	public static void main(String[] args) 
	{
		Scanner sc = new Scanner(System.in);
		
		System.out.println("Enter the No:");
		int num = sc.nextInt();
		
		Factorial  obj = new Factorial(num);
		

	}

}
