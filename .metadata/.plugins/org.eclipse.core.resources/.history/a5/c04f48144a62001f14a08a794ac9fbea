package com.java;

public class Demo {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int cnt = 1;
		int cnt2 = 1;
		for(int i =1;i<=7 ;i++)
		{
			int cnt1 = 1;
			for(int j = 1 ;j<=cnt;j++ )
			{
				if(i<=4)
				{
					if(j!=1 || cnt!=j)
					{
						System.out.print(cnt1);
					}
					else
					{
						System.out.print("* ");
					}
				}
				else
				{
					System.out.print("* ");
				}
			}
			if(i<4)
			{
				cnt = cnt +2;
			}
			else
			{
				cnt = cnt -2;
			}
			System.out.println();
		}
		
	}

}
