package com.java;

/* 
Pattern
 


End
*/

public class Pattern_Q23 
{
	public static void main(String[] args)
	{		
		int count=1;
		
		for(int i = 1 ; i <=5 ; i++)
		{	
			for(int j = 1 ; j<=7 ; j++)
			{	
				if(j<=i*2-1)
				{
					if(j%2 !=0)
					{
						System.out.print(count);
						count++;
					}
					else 
					{
						System.out.print("*");
					}
				}
			}
			System.out.println("");
		}
//		for(int i = 4 ; i>=1 ; i++)
//		{
//			for(int j = 1 ; j <= 7 ;j++)
//			{
//				if(j%2 != 0)
//				{
//					if()
//				}
//			}
//		}
	}
}