import java.util.*;

class Circle
{
	float r;
	float PI=(float) 3.14;
	void setRedius(float redius)
	{
		r=redius;
	}
	void showArea()
	{
		float area = PI*r*r;
		System.out.println("The Are Of Circle:\t" + area);
	}
}

public class Q1_AreaApp 
{
	public static void main(String[] args) 
	{
		Scanner sc = new Scanner(System.in);
		Circle cr = new Circle();
		System.out.println("Enter The Redius:");
		int redius=sc.nextfloat();
	}

}
