	{
		Scanner sc = new Scanner(System.in);
		
		System.out.println("Enter the Number:");
		long num = sc.nextInt();
		
		// main logic
		long temp = num;
		for(;temp!=0;)
		{
			temp = temp/10;
			count++;
		}
	

		long rem=0;
		


		long count=0;
			for(int i = 0 ; i <= 9 ; i++)
			{		
				count=0;
				temp = num;
				for(;temp!=0;)
				{
					rem = temp % 10;
					
					if(rem==i)
