package com.java;

public class Pattern_Q7 
{
	public static void main(String[] args) 
	{
		int flag =0;
		
		for(int i = 1 ; i <= 6 ; i++)
		{
			for(int j = 1 ; j <= 11 ; j++)
			{
				if((j<=6 && i<=j && flag==0) || (j>=7 && j<=12-i))
				{
					System.out.print(" * ");
				}
				else
				{
					System.out.print("   ");
				}
			}	
			System.out.println("");
		}
	}

}
