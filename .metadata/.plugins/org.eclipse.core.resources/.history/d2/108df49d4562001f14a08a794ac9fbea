package com.java;

public class Demo {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		int iRange = 7;
		int jRange = 7;
		int cnt = 1;
		for(int i =1;i<=7 ;i++)
		{
			for(int j = 1 ;j<=7;j++ )
			{
				if(j<=i*2-1)
				{
					System.out.print("* ");	
				}
				else if(i>=5 && j<=8-i)
				{
					System.out.print("* ");
				}
			}
			System.out.println();
		}
		
	}

}
