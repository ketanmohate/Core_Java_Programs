public class Pattern_Q22 
{
	public static void main(String[] args)
	{		
		for(int i = 1 ; i <=4 ; i++)
		{	
			for(int j = 1 ; j<=7 ; j++)
			{	
				if((j<=i*2 && j<=i*2))
				{
					System.out.print(i + " ");
				}
				else
				{
					System.out.print("  ");
				}
			}
			System.out.println("");
		}
		
//		for(int i = 1 ; i <=7 ; i++)
