package com.java;

public class Pattern_Q6 
{
	public static void main(String[] args) 
	{
		for(int i = 1 ; i <= 6 ; i++)
		{
			for(int j = 1 ; j <=11 ; j++)
			{
				if((j<=7 && j>=7-i))
				{
					System.out.print(" * ");
				}
				else if(j>=6))
				{
					System.out.print(" * ");
				}
				else
				{
					System.out.print("   ");
				}
			}
			System.out.println("");
		}

	}

}
