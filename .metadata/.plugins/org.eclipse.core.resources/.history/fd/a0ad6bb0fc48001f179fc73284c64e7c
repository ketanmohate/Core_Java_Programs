package com.java;

public class Pattern_Q8 
{
	public static void main(String[] args) 
	{
		for(int i = 1 ; i <= 6 ; i++)
		{
			int flag=0;
			
			for(int j = 1 ; j <=11 ; j++)
			{
				if(i==7-j || i>=6 || (j>=6 && (j>=7 && j==5+i)))
				{
					System.out.print(" * ");
					flag=1;
				}
				else
				{
					System.out.print("   ");
					flag=0;
				}
			}
			System.out.println("");
		}

	}
	//|| (j>=7 && j<=5+i))

}
