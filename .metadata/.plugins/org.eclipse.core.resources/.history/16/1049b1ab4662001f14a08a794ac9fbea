package com.java;

public class Demo {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		int iRange = 7;
		int jRange = 7;
		int k = 1;
		int cnt = 1;
		for(int i =1;i<=7 ;i++)
		{
			for(int j = 1 ;j<=k;j++ )
			{
				if(i<=4)
				{
					System.out.print("* ");	
					cnt = cnt +2;
					k = k +2;
				}
				else if(i>=5)
				{
					System.out.print("* ");
					cnt = cnt -2;
					k = k-2;
				}
			}
			System.out.println();
		}
		
	}

}
