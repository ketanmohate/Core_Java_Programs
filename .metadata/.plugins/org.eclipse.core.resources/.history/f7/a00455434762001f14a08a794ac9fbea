package com.java;

public class Demo {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		for(int i =1;i<=7 ;i++)
		{
			for(int j = 1 ;j<=7;j++ )
			{
				if(i<=4 && j<=2*i-1)
				{
					System.out.print("* ");
				}
				else if(i>4 && j<=16-i)
				{
					System.out.print("* ");
				}
			}
			System.out.println();
		}
		
	}

}
