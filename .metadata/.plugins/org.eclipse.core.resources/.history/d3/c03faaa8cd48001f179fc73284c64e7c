package com.java;

public class Pattern_Q6 
{
	public static void main(String[] args) 
	{
		for(int i = 1 ; i <= 6 ; i++)
		{
			for(int j = 1 ; j <=11 ; j++)
			{
				int flag=1;
				
				if((j<=6 && j>=7-i && flag =0)|| (j>=7 && j<=5+i))
				{
					System.out.print(" * ");
				}
				else
				{
					System.out.print("   ");
				}
			}
			System.out.println("");
		}

	}

}
