package com.java;

/* 
Pattern
 
             

End
*/

public class Pattern_Q15 
{
	public static void main(String[] args)
	{					
		for(int i = 1 ; i <= 5 ; i++)
		{	
			int count = (2*i);
			
			for(int j = 1 ; j<=9 ; j++)
			{
				if(j<=i)
				{
					System.out.print(j + " ");
				}
				else if 
				{
                    System.out.print((2 * i - j) + " ");  // Print decreasing part
                }
				else
				{
					System.out.print("  ");
				}
			}
			System.out.println("");
		}
	}
}
