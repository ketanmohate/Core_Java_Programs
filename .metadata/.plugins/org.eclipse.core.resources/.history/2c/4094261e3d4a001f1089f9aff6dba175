package com.java;

public class Pattern_Q23 
{
    public static void main(String[] args)
    {        
        // Printing the first part of the pattern
        int count = 7;
        for(int i = 4; i >= 1; i--) 
        {    
            for(int j = 1; j <= i; j++) 
            {
                System.out.print(count);
                if(j < i) 
                {
                    System.out.print("*");
                }
                count++;
            }
            System.out.println("");
        }
    }
}
