package com.java;

/* 
Pattern
 
 

End
*/

public class Pattern_Q21 
{
	public static void main(String[] args)
	{		
		for(int i = 1 ; i <=4 ; i++)
		{	
			for(int j = 1 ; j<=4 ; j++)
			{
				int count=i;
				
				if((i>=j))
				{
					count+=2;
					System.out.print(count + " ");
				}
				else
				{
					System.out.print("  ");
				}
			}
			System.out.println("");
		}
		
		for(int i = 3 ; i >=1 ; i--)
		{
			for(int j = 1 ; j<=3 ; j++)
			{	
				int count=i;
				
				if(j<=count*2-i)
				{
//					count-=2;
					System.out.print(count + " ");
				}
				else		
				{
					System.out.print("  ");
				}
			}
			System.out.println("");
		}
	}
}
