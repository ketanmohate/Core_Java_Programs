package com.java;

/* 
Pattern
 
 

End
*/

public class Pattern_Q21 
{
	public static void main(String[] args)
	{		
		for(int i = 1 ; i <=4 ; i++)
		{	
			for(int j = 1 ; j<=4 ; j++)
			{
				if((i>=j))
				{
					System.out.print(i + " ");
				}
				else
				{
					System.out.print("  ");
				}
			}
			System.out.println("");
		}
		
		for(int i = 1 ; i <=7 ; i++)
		{
			int count=1;
			for(int j = 1 ; j<=3 ; j++)
			{	
				if(j<=4-i && i==5)
				{
					System.out.print(count + " ");
				}
				else		
				{
					System.out.print("  ");
				}
			}
			System.out.println("");
		}
	}
}
